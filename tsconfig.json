{
  "compilerOptions": {
    "module": "CommonJS",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // Don't automatically include anything.
    // Only include `@types` packages that we need to import.
    "types" : ["@types/node"],

    "baseUrl": ".",
    "paths": {
      "/@/*": [
        "./src/*"
      ],
      "/$/*": [
        "../../types/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "../../types/**/*.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
